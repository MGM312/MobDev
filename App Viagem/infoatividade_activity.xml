<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageAtividade"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ImageView>
    <TextView
        android:id="@+id/textNomeAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageAtividade"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/textTemaAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNomeAtividade"
        android:layout_margin="5dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#373737">
    </TextView>
    <TextView
        android:id="@+id/textTitleLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTemaAtividade"
        android:layout_margin="5dp"
        android:text="Local:"
        android:textSize="20sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/textDuracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLocal"
        android:layout_margin="5dp"
        android:text="Duração:"
        android:textSize="20sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/textLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textTitleLocal"
        android:layout_below="@id/textTemaAtividade"
        android:layout_marginVertical="8dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#373737">
    </TextView>
    <SeekBar
        android:id="@+id/seekDuracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textDuracao"
        android:layout_below="@id/textLocal"
        android:layout_marginVertical="10dp"
        android:max="10"
        android:progress="5"
        android:min="1">
    </SeekBar>
    <Button
        android:id="@+id/buttonLockAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="Selecionar">
    </Button>
</RelativeLayout>