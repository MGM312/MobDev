<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTravelFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Configuração Viagem"
        android:textSize="30sp"
        android:textColor="@color/black">
    </TextView>
    <LinearLayout
        android:id="@+id/formTravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTravelFormTitle"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Destino"
            android:textSize="20sp"
            android:inputType="text">
        </EditText>
        <TextView
            android:id="@+id/textSelectPartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Qual é a data de partida?"
            android:textSize="20sp"
            android:textColor="@color/black">
        </TextView>
        <DatePicker
            android:id="@+id/datePartida"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false">
        </DatePicker>
        <TextView
            android:id="@+id/textSelectRetorno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Qual é a data de retorno?"
            android:textSize="20sp"
            android:textColor="@color/black">
        </TextView>
        <DatePicker
            android:id="@+id/dateRetorno"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false">
        </DatePicker>
        <TextView
            android:id="@+id/textSelectPreferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Que tipo de viagem gostaria?"
            android:textSize="20sp"
            android:textColor="@color/black">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkboxAventura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Aventura"
                android:textSize="15sp">
            </CheckBox>
            <CheckBox
                android:id="@+id/checkboxRelaxante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/checkboxAventura"
                android:text="Relaxante"
                android:textSize="15sp">
            </CheckBox>
            <CheckBox
                android:id="@+id/checkboxCultura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/checkboxRelaxante"
                android:text="Cultura"
                android:textSize="15sp">
            </CheckBox>
            <CheckBox
                android:id="@+id/checkboxPraia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/checkboxCultura"
                android:text="Praia"
                android:textSize="15sp">
            </CheckBox>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buttonConcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/formTravel"
        android:layout_centerHorizontal="true"
        android:text="Concluir">
    </Button>
</RelativeLayout>