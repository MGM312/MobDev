<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonIntoRelativeLinear"
            android:text="RLTV"
            android:textSize="30sp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="60dp"
            android:layout_marginTop="15dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonIntoTableLinear"
            android:text="TBLE"
            android:textSize="30sp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="60dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonIntoConstraintLinear"
            android:text="CTRT"
            android:textSize="30sp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="60dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSairLinear"
            android:text="Sair"
            android:textSize="30sp"
            android:paddingHorizontal="43dp"
            android:paddingVertical="60dp">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo Linear"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp">
    </TextView>
</LinearLayout>