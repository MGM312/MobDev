<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textExemploConstraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ExemploConstraint"
        android:textSize="25sp">
    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIntoLinearConstraint"
        app:layout_constraintEnd_toStartOf="@id/textExemploConstraint"
        app:layout_constraintTop_toBottomOf="@id/textExemploConstraint"
        android:text="LINE"
        android:textSize="25sp"
        android:padding="25dp"
        android:layout_margin="20sp">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIntoRelativeConstraint"
        app:layout_constraintStart_toStartOf="@id/buttonIntoLinearConstraint"
        app:layout_constraintTop_toBottomOf="@id/buttonIntoLinearConstraint"
        android:text="RLTV"
        android:textSize="25sp"
        android:padding="22dp">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIntoTableConstraint"
        app:layout_constraintStart_toEndOf="@id/buttonIntoLinearConstraint"
        app:layout_constraintTop_toBottomOf="@id/textExemploConstraint"
        android:text="TBLE"
        android:textSize="25sp"
        android:padding="25dp"
        android:layout_margin="20sp">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSairConstraint"
        app:layout_constraintStart_toEndOf="@id/buttonIntoRelativeConstraint"
        app:layout_constraintTop_toBottomOf="@id/buttonIntoTableConstraint"
        android:text="SAIR"
        android:textSize="25sp"
        android:paddingVertical="22dp"
        android:paddingHorizontal="25dp"
        android:layout_marginLeft="20sp">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>